@model ClinicSystem.WebApplication.Models.AddDiagnoseViewModel

@{
    ViewBag.Title = "Diagnozuj";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddDiagnose", "Examination", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Wystaw diagnozę dla pacjenta</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.VisitId)
    <div class="form-group">
        @Html.LabelFor(m => m.DiseaseId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.DiseaseId,
                new SelectList(Model.Diseases, "ID", "CODE"),
                "Wybierz chorobę...",
                new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Diagnose, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Diagnose, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
