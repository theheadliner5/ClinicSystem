@using GridMvc.Html
@model ClinicSystem.WebApplication.Models.DiseasesViewModel

@{
    ViewBag.Title = "Słownik chorób";
}

<h2>@ViewBag.Title</h2>
<div>
    <h4>Zarządzanie danymi słownika chorób</h4>
    <hr />
    <p class="text-success">@ViewBag.StatusMessage</p>
    @Html.Grid(Model.Diseases).Columns(columns =>
    {
        columns.Add(c => c.CODE).Titled("Kod choroby");
        columns.Add(c => c.CODE_DESCRIPTION).Titled("Opis");
        columns.Add().Sanitized(false).Encoded(false).RenderValueAs(disease => Html.ActionLink("Edytuj", "AddDisease", new { diseaseId = disease.ID }, null).ToHtmlString());
        columns.Add().Sanitized(false).Encoded(false).RenderValueAs(disease => Html.ActionLink("Usuń", "RemoveDisease", new { diseaseId = disease.ID }, null).ToHtmlString());
    }).WithPaging(10).Sortable(true).Filterable(true)
    <br />
    @Html.ActionLink("Dodaj chorobę", "AddDisease", "Manage", htmlAttributes: new { @class = "btn btn-primary", @role = "button" })

</div>
