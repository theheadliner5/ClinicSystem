@using ClinicSystem.WebApplication.Models;

@model RoleEditViewModel

@{
    ViewBag.Title = "Edytuj rolę";
}


<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="editRoleForm">
            @using (Html.BeginForm("Save", "RoleEdit", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <br />
                <div class="form-group">
                    @Html.LabelFor(m => m.RoleId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.RoleId,
                            new SelectList(Model.Roles, "ID", "NAME"),
                            "Wybierz rolę...",
                            new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.HiddenFor(m => m.AspNetUserId)
                        <input type="submit" value="Zapisz" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
