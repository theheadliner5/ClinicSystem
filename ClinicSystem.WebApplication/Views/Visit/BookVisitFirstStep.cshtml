@model ClinicSystem.WebApplication.Models.BookVisitFirstStepViewModel

@{
    ViewBag.Title = "Umawianie wizyty";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("BookVisitFirstStep", "Visit", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Umów wizytę w jednej z przychodni Luxcover</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @readonly = true })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ClinicId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ClinicId,
                new SelectList(Model.Clinics, "ID", "NAME"),
                "Wybierz przychodnię...",
                new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group" align="right">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Następny krok" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
